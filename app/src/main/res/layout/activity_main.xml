<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image_res"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/button"
            android:onClick="sendMessage"
            android:text="@string/loginButton"
            android:textColor="#00717D"
            android:textSize="30sp"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttondesign"

            app:layout_constraintBottom_toTopOf="@+id/button2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <Button
            android:textColor="#00717D"
            android:textSize="30sp"
            android:background="@drawable/buttondesign"
            android:onClick="sendMessage2"

            android:text="@string/searchButton"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:id="@+id/button2"

            app:layout_constraintBottom_toTopOf="@+id/button3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <Button
            android:textColor="#00717D"
            android:textSize="30sp"
            android:background="@drawable/buttondesign"
            android:text="@string/mmapButton"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:id="@+id/button3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginBottom="60dp"/>
    <ImageView
            android:layout_width="472dp"
            android:layout_height="274dp"
            android:src="@drawable/carmeets_mainlogo"
            android:id="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="0.481"/>
</android.support.constraint.ConstraintLayout>