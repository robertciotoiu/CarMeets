<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="25"
        android:background="#99000000"
        tools:context=".DisplayEventsActivity"
        >


    <ImageView android:layout_width="109dp" android:layout_height="113dp"
               android:id="@+id/ImgMeeting"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"

               android:scaleType="fitXY"
               android:adjustViewBounds="true"

               android:layout_alignParentStart="true"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:textStyle="bold"
            android:layout_width="245dp"
            android:layout_height="38dp" android:layout_toEndOf="@+id/ImgMeeting"
            android:id="@+id/NameMeeting"
            android:layout_alignParentTop="true"
            android:textSize="24sp" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/ImgMeeting"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" android:layout_marginTop="5dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="90dp"
            android:layout_height="20dp" android:id="@+id/DateMeeting"
            android:layout_alignBottom="@+id/ImgMeeting"
            android:layout_below="@+id/LocationMeeting"
            android:layout_toEndOf="@+id/ImgMeeting"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/LocationMeeting"
            android:textColor="@android:color/darker_gray"

    />
    <TextView
            android:text="TextView"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" android:id="@+id/TimeMeeting"
            android:layout_below="@+id/LocationMeeting"
            app:layout_constraintStart_toEndOf="@+id/ImgMeeting" android:layout_marginStart="8dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/LocationMeeting"
            android:textColor="@android:color/darker_gray"
    />
    <TextView
            android:text="TextView"
            android:layout_width="247dp"
            android:layout_height="39dp" android:id="@+id/LocationMeeting"
            android:textSize="18sp"
            android:layout_below="@+id/NameMeeting" android:layout_toEndOf="@+id/ImgMeeting"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/ImgMeeting"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/NameMeeting"
            android:textColor="@color/place_autocomplete_prediction_primary_text_highlight"
            android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>