<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayEventsActivity"
        android:id="@+id/constraintLayout3"
        >


    <android.support.design.widget.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:layout_gravity="center_horizontal"

            android:src="@drawable/filterimagewhite_resized"
            app:fabSize="normal"
            app:fabCustomSize="60dp"
            android:id="@+id/floatingActionButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" app:backgroundTint="#40FFFFFF"/>

    <ListView android:layout_width="match_parent" android:layout_height="match_parent"

              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/listView"
              android:background="#99000000"
              android:dividerHeight="1dp"
    >

    </ListView>
</android.support.constraint.ConstraintLayout>