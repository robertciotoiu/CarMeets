<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/constraintLayout4"
        android:layout_height="match_parent"
        tools:context=".listViewItemExpand">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:layout_gravity="center_horizontal"

            android:src="@drawable/floatingjoin"
            app:fabSize="normal"
            app:fabCustomSize="60dp"
            android:id="@+id/floatingActionButtonJoinEvent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" app:backgroundTint="#40FFFFFF"
            app:layout_constraintStart_toStartOf="parent"/>


    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/itemImage"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="40dp" android:layout_marginStart="30dp"/>
    <TextView
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/itemName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/itemDate"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="552dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"/>
    <TextView
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/itemTime"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="552dp" android:layout_marginStart="84dp"/>
    <TextView
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="199dp" android:layout_height="89dp"
            android:id="@+id/itemLocation"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="392dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.695"/>
    <TextView
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="309dp" android:layout_height="129dp"
            android:id="@+id/itemDescription"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="184dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.509"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icon_show_location"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            android:layout_marginTop="384dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="Description:"
            android:layout_width="141dp"
            android:layout_height="36dp"
            android:id="@+id/descriptionTextView" android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="Place:"
            android:layout_width="141dp"
            android:layout_height="36dp"
            android:id="@+id/descriptionTextView2" android:layout_marginTop="340dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="Time:"
            android:layout_width="141dp"
            android:layout_height="36dp"
            android:id="@+id/descriptionTextView3" android:layout_marginTop="512dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
</android.support.constraint.ConstraintLayout>